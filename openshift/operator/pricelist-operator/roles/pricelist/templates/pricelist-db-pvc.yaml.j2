kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: "{{ ansible_operator_meta.name }}-db-pvc"
  namespace: "{{ ansible_operator_meta.namespace }}"
spec:
{% if dbstorageclass is defined %}
  storageClassName: "{{ dbstorageclass }}"
{% endif %}
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 2Gi
