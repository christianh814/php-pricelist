apiVersion: v1
kind: ConfigMap
metadata:
  labels:
    app: "{{ ansible_operator_meta.name }}-pricelist"
  name: "{{ ansible_operator_meta.name }}-pricelist-cm"
  namespace: "{{ ansible_operator_meta.namespace }}"
data:
  db.php: |-
    <?php
    $host = "{{ ansible_operator_meta.name }}-pricelist-db-svc";
    $port = 3306;
    $db_name = file_get_contents("/etc/pricelist/creds/database");
    $username = file_get_contents("/etc/pricelist/creds/dbuser");
    $password = file_get_contents("/etc/pricelist/creds/dbpassword");
    ?>
