apiVersion: batch/v1
kind: Job
metadata:
  creationTimestamp: null
  name: "{{ meta.name }}-pricelist-postdeploy"
  namespace: "{{ meta.namespace }}"
spec:
  template:
    metadata:
      creationTimestamp: null
    spec:
      containers:
      - command:
        - /bin/bash
        - -c
        - |
          until [ $(curl -s -o /dev/null -w {% raw %} "%{http_code}" {% endraw %} "http://{{ meta.name }}-pricelist-frontend-svc:8080/create_database.php") -eq 200 ]; do sleep 5; done
          curl -s "http://{{ meta.name }}-pricelist-frontend-svc:8080/create_database.php"
        image: quay.io/redhatworkshops/pricelist:latest
        name: pricelist-postdeploy
        resources: {}
      restartPolicy: Never
